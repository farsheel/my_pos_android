<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSecondary">@color/drawerBackground</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialButtonPrimary" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/drawerBackground</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialButtonCash"  parent="MaterialButtonPrimary">
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/drawerBackground</item>
        <item name="colorAccent">@color/drawerBackground</item>
    </style>
</resources>
