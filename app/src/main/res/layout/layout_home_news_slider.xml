<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/featuredImageIv"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/test_slider_image"/>

    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="@drawable/bg_transparent_gradient"
          app:layout_constraintBottom_toBottomOf="@id/featuredImageIv"
          app:layout_constraintTop_toTopOf="@id/featuredImageIv"
          app:layout_constraintStart_toStartOf="@id/featuredImageIv"
          app:layout_constraintEnd_toEndOf="@id/featuredImageIv"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintBottom_toTopOf="@+id/infoTv"
            android:text="Vivo Z1Pro Hands-on: Triple Cameras and a Big Battery on a Budget"
            app:layout_constraintStart_toStartOf="@id/featuredImageIv"
            app:layout_constraintEnd_toEndOf="@id/featuredImageIv"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/infoTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:text="12/06/2019 Author"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="@id/featuredImageIv"
            app:layout_constraintEnd_toEndOf="@id/featuredImageIv"
    />


</androidx.constraintlayout.widget.ConstraintLayout>